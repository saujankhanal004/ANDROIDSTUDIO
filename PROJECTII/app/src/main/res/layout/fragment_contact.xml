<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tv_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saujan Khanal"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tv_owner_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9844996725"
            android:textColor="#2196F3"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tv_owner_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saujankhanal003@gmail.com"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login for Direct Contact"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>
